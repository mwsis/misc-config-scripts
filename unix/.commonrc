# ######################################
# global definitions

if false; then

	:
elif [ -n "$BASH_VERSION" ]; then

	if [ -f /etc/bashrc ];then

		echo -e "\tLoading global definitions from /etc/bashrc"

		. /etc/bashrc
	fi
elif [ -n "$ZSH_VERSION" ]; then

	: # zsh automatically brings in /etc/zshrc
else

	echo "shell not recognised as either 'bash' or 'zsh'"
fi

# ######################################
# aliases

# cb - copy to clipboard

if which pbcopy &>/dev/null; then

	alias cb=pbcopy
fi

# hist - show all history

if false; then

	:
elif [ -n "$BASH_VERSION" ]; then

	alias hist="history"
elif [ -n "$ZSH_VERSION" ]; then

	alias hist="history 0"
else

	echo "shell not recognised as either 'bash' or 'zsh'"
fi

# ldd - list dynamic dependencies

if which otool &>/dev/null; then

	alias ldd='otool -L'
fi

# ll - list files long-form

alias ll='ls -a -G -h -l'
if which gls &>/dev/null; then

	alias ll='gls --color=auto -a -F -G -h -l --group-directories-first'
fi

# vi - ensuring vi is vim, where vim present

if which vim &>/dev/null; then

	alias vi="vim"
fi

# ######################################
# environment variables

# custom variables

if [ -f $HOME/.common_environment_variables ]; then

	echo -e "\tLoading custom environment variables from $HOME/.common_environment_variables"

	. $HOME/.common_environment_variables
elif [ -n "$BASH_VERSION" ]; then

	if [ -f $HOME/.bash_environment_variables ]; then

		echo -e "\tLoading custom environment variables from $HOME/.bash_environment_variables"

		. $HOME/.bash_environment_variables
	fi
elif [ -n "$ZSH_VERSION" ]; then

	if [ -f $HOME/.zsh_environment_variables ]; then

		echo -e "\tLoading custom environment variables from $HOME/.zsh_environment_variables"

		. $HOME/.zsh_environment_variables
	fi
else

	echo "shell not recognised as either 'bash' or 'zsh'"
fi

# GOPATH

if command -v do > /dev/null; then

	if [[ "" != "$GOPATH" ]]; then

		:
	elif [[ -f $HOME/.gopath ]]; then

		gopath=$(eval echo $(head -n 1 $HOME/.gopath))

		export GOPATH=$gopath
	elif [[ -d $HOME/dev/go ]]; then

		export GOPATH=$HOME/dev/go
	elif [[ -d $HOME/go ]]; then

		export GOPATH=$HOME/go
	else

		echo -e "WARNING: GOPATH not defined, and cannot be inferred: file ~/.gopath does not exist; directories ~/dev/go and ~/go do not exist"
	fi
fi

# PATH

POTENTIAL_LOCAL_PATHS_=()
POTENTIAL_LOCAL_PATHS_+=($HOME/.bin)
POTENTIAL_LOCAL_PATHS_+=($HOME/bin)
POTENTIAL_LOCAL_PATHS_+=(:/Applications/Xcode.app/Contents/Developer/usr/bin)

for p in ${POTENTIAL_LOCAL_PATHS_[@]}
do

	if [[ ":" == ${p:0:1} ]]
	then

		PATH=$PATH:${p:1}
	else

		PATH=$p:$PATH
	fi
	export PATH
done

# prompt

function fn_local_branch_name_4_git_prompt_() {

	git branch 2>&- | grep "^[*]" | cut -c 3-
}

if [ -n "$BASH_VERSION" ]; then

	PROMPT_LEADER=$(echo $PROMPT_LEADER | sed 's/ *$//g' | sed 's/^ *//g')
	[[ -z "$PROMPT_LEADER" ]] || PROMPT_LEADER="[\033[01;36m${PROMPT_LEADER}\033[00m] "

	export PS1="$PROMPT_LEADER[\033[00;32m\u@\h\033[00m] [\033[00;34m\w\033[00m] [\033[00;33m`fn_local_branch_name_4_git_prompt_`\033[00m]\n$ "
fi

if [ -n "$ZSH_VERSION" ]; then

	PROMPT_LEADER=$(echo $PROMPT_LEADER | sed 's/ *$//g' | sed 's/^ *//g')
	[[ -z "$PROMPT_LEADER" ]] || PROMPT_LEADER="[%B%F{cyan}${PROMPT_LEADER}%f%b] "

	NEWLINE_4_GIT_PROMPT_=$'\n'
	PROMPT='${PROMPT_LEADER}[%F{green}%n@%m%f] [%F{blue}%~%f] [%F{yellow}$(fn_local_branch_name_4_git_prompt_)%f]${NEWLINE_4_GIT_PROMPT_}$ '
fi

# rbenv

if command -v rbenv &>/dev/null; then

	echo -e "\tInitialising rbenv ..."
	eval "$(rbenv init -)"
fi

# ######################################
# functions

if [ -d $HOME/.bin ]; then

	for f in $HOME/.bin/fn_*sh
	do

		source "$f"
	done
fi

# ######################################
# editor

set -o vi || export EDITOR=vi

IGNORE_ELEMENTS_=()
IGNORE_ELEMENTS_+=(cd)
IGNORE_ELEMENTS_+=(exit)
IGNORE_ELEMENTS_+=("git diff")
IGNORE_ELEMENTS_+=("git dis")
IGNORE_ELEMENTS_+=("git diw")
IGNORE_ELEMENTS_+=("git pull")
IGNORE_ELEMENTS_+=("git push")
IGNORE_ELEMENTS_+=("git st")
IGNORE_ELEMENTS_+=("git status")
IGNORE_ELEMENTS_+=(history)
IGNORE_ELEMENTS_+=("history *")
IGNORE_ELEMENTS_+=(ll)
IGNORE_ELEMENTS_+=(ls)
IGNORE_ELEMENTS_+=("ls -al")
iGNORE_ELEMENTS_+=(pwd)

if [ -n "$BASH_VERSION" ]; then

	export HISTCONTROL=erasedups:ignoreboth

	HISTIGNORE=
	for i in ${!IGNORE_ELEMENTS_[@]}
	do

		HISTIGNORE+=:${IGNORE_ELEMENTS_[$i]}
	done
	export HISTIGNORE
fi

if [ -n "$ZSH_VERSION" ]; then

	setopt LIST_ROWS_FIRST
	setopt NO_AUTO_MENU
	setopt NO_BEEP
	setopt PROMPT_SUBST

	setopt HIST_FIND_NO_DUPS
	setopt HIST_IGNORE_ALL_DUPS
	setopt HIST_IGNORE_SPACE
	setopt HIST_REDUCE_BLANKS
	setopt HIST_SAVE_NO_DUPS
	setopt HIST_VERIFY

	HISTORY_IGNORE="("
	let "lim_IGNORE_ELEMENTS_ = ${#IGNORE_ELEMENTS_} - 1"
	for i in `seq 0 ${lim_IGNORE_ELEMENTS_}`
	do

		HISTORY_IGNORE+="|${IGNORE_ELEMENTS_[$i]}"
	done
	HISTORY_IGNORE+=")"
	export HISTORY_IGNORE
fi

# ######################################
# user customisations

if [ -f $HOME/.common_custom_rc ]; then

	echo -e "\tLoading custom settings from $HOME/.common_custom_rc"

	. $HOME/.common_custom_rc
elif [ -n "$BASH_VERSION" ]; then

	if [ -f $HOME/.bash_custom_rc ]; then

		echo -e "\tLoading custom settings from $HOME/.bash_custom_rc"

		. $HOME/.bash_custom_rc
	fi
elif [ -n "$ZSH_VERSION" ]; then

	if [ -f $HOME/.zsh_custom_rc ]; then

		echo -e "\tLoading custom settings from $HOME/.zsh_custom_rc"

		. $HOME/.zsh_custom_rc
	fi
else

	echo "shell not recognised as either 'bash' or 'zsh'"
fi

